#:import utils kivy.utils

<GameLayout@BoxLayout>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#660066')
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "horizontal"
    cols: 3

<BoardLayout@GridLayout>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#ff0000')
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "vertical"
    cols: 10
    size_hint_x: 0.4
    size_hint_y: 0.9

<BreakLayout@BoxLayout>:
    orientation: "vertical"
    cols: 1
    size_hint_x: 0.05

<GameScreen@Screen>:
    size_hint_y: 1.0